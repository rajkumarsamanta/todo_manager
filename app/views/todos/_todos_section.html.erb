<section class="TodoSection">
        <div class="DueToday-div">
          <p class="DueToday-title"><%= section_title %></p>
          <p class="DueToday-count"><%= todos.completed.count%>/<%= todos.count %></p>
        </div>
        <div>
          <ul class="TodoUl-list">
            <% todos.each do |todo| %>
              <li class="TodoItems-list">
                <label class="TodoItems-container">
                  <input type="checkbox" class="DueItem-checkbox" />
                  <%= todo.todo_text %>

                  <% if show_due_date %>
                    <p class="TodoOverdue-item"><%= todo.due_date.to_s(:short) %></p>
                  <% end %>

                  <p class="TodoOverdue-item">
                  <a href="">
                    <img class="TodoItem_DeleteImg" src="./delete.png" />
                  </a>
                </p>
                </label>
              </li>
            <% end %>
          </ul>
        </div>
</section>
