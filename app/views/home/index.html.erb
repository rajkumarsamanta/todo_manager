<p class="Home-title">Welcome to the Todo Manager Home page </p>

<p class = "NewUser-title">Sign-in</p>
<section class="Home-authenticate">
  <%= form_with url: new_sessions_path do |form| %>
    <div class="Form-section">
      <p>Email</p>
      <%= form.email_field :email, class: "Form-input", autofocus: true %>
    </div>
    <div class="Form-section">
      <p>Password</p>
      <%= form.password_field :password, class: "Form-input" %>
    </div>
    <div class="Form-section">
      <%= form.submit "Sign-in", class: "Submit-button" %>
    </div>
  <% end %>
</section>

<p class="Home-authenticate">
  If you are a new user, <%= link_to "sign up here", new_user_path %>
</p>
