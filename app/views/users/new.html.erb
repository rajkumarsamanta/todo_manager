<p class = "NewUser-title">Welcome new user</p>
<section class="UsersNew">
  <%= form_with url: users_path do |form| %>
    <div class="Form-section">
      <p>First Name</p>
      <%= form.text_field :first_name, class: "Form-input", autofocus: true %>
    </div>
    <div class="Form-section">
      <p>Last Name</p>
      <%= form.text_field :last_name, class: "Form-input" %>
    </div>
    <div class="Form-section">
      <p>Email</p>
      <%= form.email_field :email, class: "Form-input" %>
    </div>
    <div class="Form-section">
      <p>Password</p>
     <%= form.password_field :password, class: "Form-input" %>
    </div>
    <div class="Form-section">
      <%= form.submit "Sign-up!", class: "Submit-button" %>
    </div>
  <% end %>
</section>
